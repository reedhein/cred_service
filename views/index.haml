!!! 5
%head
  %title Kitten Clicker login!
  %link{ rel: 'stylesheet', href: 'stylesheets/bootstrap.css'}
  %link{ rel: 'stylesheet', href: 'stylesheets/font-awesome.min.css' }
%body{style: "background-color: #0C1017; background-image: url('domo_kun_and_tree_blossoms-wallpaper-1920x1080.jpg'); background-size: 100% 100% ; background-repeat:no-repeat; min-height: 70em"}
  %nav.navbar.navbar-dark
    %a.navbar-brand{href: '/'}
      Kitten Clicker
    %ul.nav.navbar-nav
      %li.nav-item.active
        %a.nav-link{href: '#'}
          Home
      %li.nav-item.active
        %a.nav-link{href: '#'}
          Login
  .container-fluid{style: 'height: 100%; min-height: 100%'}
    .row
      - if session[:salesforce] == nil
        .col-sm-6.col-md-6.col-xlg-6.offset-md-0.offset-lg-0.offset-xl-0{sytle: ''}
          .col-lg-3.offset-lg-4{style: 'padding: 25em 0em'}
            %form{:id => "authenticate_form", :name => "authenticate_form", :action => "/authenticate/salesforce", :method => "post"}
              %button{id: 'salesforce_auth'} Authenticate using your salesforce credentials
      - else
        .col-sm-6.col-md-6.col-xlg-6.offset-md-0.offset-lg-0.offset-xl-0{sytle: ''}
          .col-lg-3.offset-lg-4{style: 'padding: 25em 0em'}
            = session.inspect
      - if session[:box] == nil
        .col-sm-6.col-md-6.col-xlg-6.offset-md-0.offset-lg-0.offset-xl-0{style: 'border-left: 1px dotted grey'}
          .col-lg-3.offset-lg-4{style: 'padding: 25em 0em'}
            %form{:id => "authenticate_form", :name => "authenticate_form", :action => "/authenticate/box", :method => "post"}
              %button{id: 'salesforce_auth'} Authenticate using your sandbox credentials
      - else
        .col-sm-6.col-md-6.col-xlg-6.offset-md-0.offset-lg-0.offset-xl-0{sytle: ''}
          .col-lg-3.offset-lg-4{style: 'padding: 25em 0em'}
            = session.inspect

  - if session[:production] == nil
    %h3 You are NOT authenticated in salesforce
    %form{:id => "authenticate_form", :name => "authenticate_form", :action => "/authenticate/salesforce", :method => "post"}
      %button{id: 'salesforce_auth'} Authenticate using your salesforce credentials
  - else
    %h3{id: 'salesforce_user'}
      #{session[:production][:extra][:username]}
    token: #{session[:production]['credentials']['token'] }
    %br
    refresh_token: #{session[:production]['credentials']['refresh_token'] }
  %hr
  - if session[:sandbox] == nil
    %h3 You are NOT authenticated in Sandbox
    %form{:id => "authenticate_form", :name => "authenticate_form", :action => "/authenticate/sandbox", :method => "post"}
      %button{id: 'salesforce_auth'} Authenticate using your sandbox credentials
  - else
    %h3{id: 'salesforce_user'}
      #{session[:sandbox][:extra][:username]}
  %hr
  - if session[:box_user] == nil
    %h3 You are NOT authenticated in box
    %form{:id => "authenticate_form", :name => "authenticate_form", :action => "/authenticate/box", :method => "post"}
      %button{id: 'box_auth'} Authenticate using your box credentials
  - else
    %h3{id: 'box_user'}
      #{session['box_user']}
